#run busco on the coding seq files generated by braker3
#need to activate the environment
conda activate busco
#from the procedures folder run
#this code uses all the eukariotic genome information as there are no individual inage information sufficiently close phylogenetically to corals to run just that.
#a_cytherea
busco -m genome -i ../input/braker_aa_files/a_cytherea_soft_mask_breaker.codingseq -o ../output/BUSCO_braker3/a_cytherea_braker --auto-lineage-euk
a)hyactintus
busco -m genome -i ../input/braker_aa_files/a_hyactintus_soft_mask_braker.codingseq -o ../output/BUSCO_braker3/a_hyactintus_braker --auto-lineage-euk
